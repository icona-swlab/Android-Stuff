<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:background="@android:color/transparent"
	>
	<RelativeLayout android:id="@+id/search_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_alignParentTop="true"
	    android:background="#a4a4a4"
	    >
	    <it.icona.roundcorners.MySpinner android:id="@+id/seltype"
	        android:layout_width="wrap_content"
			android:layout_height="fill_parent"
	        android:layout_centerVertical="true"
	    	android:layout_marginRight="5dp"
	    	android:layout_alignParentLeft="true"
	    	android:background="#00000000"
		    />
		<ImageView android:id="@+id/separator1"
			android:background="#80ffffff"
			android:layout_width="1dp"
			android:layout_height="fill_parent"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/seltype"
			/>
	    <LinearLayout android:id="@+id/textsearch"
	    	android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	    	android:padding="2dp"
			android:layout_toLeftOf="@+id/separator2"
			android:layout_toRightOf="@+id/separator1"
	    	>
			<EditText android:id="@+id/text"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:hint="Search"
		        android:imeOptions="actionSend"
		        android:layout_gravity="center_vertical"
			    android:background="@drawable/whitebackground_roundcorners"
			    android:singleLine="true"
		        />
	    </LinearLayout>
		<ImageView android:id="@+id/separator2"
			android:background="#80ffffff"
			android:layout_width="1dp"
			android:layout_height="fill_parent"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/cerca"
			/>
	    <ImageButton android:id="@+id/cerca"
	    	android:src="@drawable/search"
	    	android:background="#00000000"
	    	android:layout_width="40dp"
	        android:layout_height="fill_parent"
			android:layout_toLeftOf="@+id/separator3"
	    	/>
		<ImageView android:id="@+id/separator3"
			android:background="#80ffffff"
			android:layout_width="1dp"
			android:layout_height="fill_parent"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/myloc"
			/>
	    <ImageButton android:id="@+id/myloc"
	    	android:src="@drawable/mylocation"
	    	android:background="#00000000"
	    	android:layout_width="40dp"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	    	/>
	</RelativeLayout>
	
	<RadioGroup
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_centerInParent="true"
	    android:checkedButton="@+id/first"
	    android:orientation="horizontal" >

	   <RadioButton android:id="@+id/first"
	      android:width="50dp"
	      android:height="50dp"
	      android:button="@drawable/button_radio"/>
	   <RadioButton android:id="@+id/second"
	      android:width="50dp"
	      android:height="50dp"
	      android:button="@drawable/button_radio"/>
	   <RadioButton android:id="@+id/third"
	      android:width="50dp"
	      android:height="50dp"
	      android:button="@drawable/button_radio"/>
	   <RadioButton android:id="@+id/fourth"
	      android:width="50dp"
	      android:height="50dp"
	      android:button="@drawable/button_radio"/>
	</RadioGroup>

</RelativeLayout>
